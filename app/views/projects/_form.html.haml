= form_for @project, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :details, :class => 'control-label'
    .controls
      = f.text_field :details, :class => 'text_field'
  .control-group
    = f.label :banner, :class => 'control-label'
    .controls
      = f.text_field :banner, :class => 'text_field'
  .control-group
    = f.label :target_date, :class => 'control-label'
    .controls
      = f.text_field :target_date, :class => 'text_field'
  .control-group
    = f.label :target_amount, :class => 'control-label'
    .controls
      = f.text_field :target_amount, :class => 'text_field'
  .control-group
    = f.label :summary, :class => 'control-label'
    .controls
      = f.text_field :summary, :class => 'text_field'
  .control-group
    = f.label :published, :class => 'control-label'
    .controls
      = f.text_field :published, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), projects_path, :class => 'btn'
